@page
@model Foodie.Pages.Admin.Inventory.UpsertModel
@{
    ViewData["Title"] = "Upsert";
}

<form method="post" asp-action="Upsert">
    <div class="container">
        <div class="row px-2 mx-2 backgroundWhite border">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>

            @if (Model.InventoryVM.Inventory.Id != 0)
            {
                <input type="hidden" asp-for="InventoryVM.Inventory.Id" />
            }

            <div class="col-12 px-3" style="border-bottom:1px solid #325d88">
                <h2 class="text-primary">Inventory</h2>
            </div>

            <div class="col-8 pt-3">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="InventoryVM.Inventory.Name"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="InventoryVM.Inventory.Name" />
                        <span asp-validation-for="InventoryVM.Inventory.Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="InventoryVM.Inventory.Quantity"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="InventoryVM.Inventory.Quantity" />
                        <span asp-validation-for="InventoryVM.Inventory.Quantity" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label>Unit Type</label>
                    </div>
                    <div class="col-9">
                        <select asp-for="InventoryVM.Inventory.UnitTypeId" asp-items="Model.InventoryVM.UnitTypeList" class="form-control">
                            <option value="" hidden selected>Choose a unit type</option>
                        </select>
                        <span class="text-danger" asp-validation-for="InventoryVM.Inventory.UnitTypeId"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-9 offset-3">
                        <div class="row">
                            <div class="col-6">

                                <button type="submit" class="btn btn-primary form-control">@(Model.InventoryVM.Inventory.Id != 0 ? "Update" : "Create")</button>

                            </div>
                            <div class="col-6">
                                <a asp-page="./Index" class="btn btn-success form-control">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>



@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}