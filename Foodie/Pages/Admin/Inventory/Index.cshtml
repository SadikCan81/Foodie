@page
@model Foodie.Pages.Admin.Inventory.IndexModel
@{
    ViewData["Title"] = "Index";
}

<div class="border backgroundWhite container">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Inventory List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-page="Upsert" class="btn btn-primary"><i class="fas fa-plus"></i> &nbsp; Create New</a>
        </div>
    </div>
    <br /> <br />
    <table id="DT_load" class="table table-striped table-bordered" style="width:100% ">
        <thead>
            <tr>
                <th>Name</th>
                <th>Quantity</th>
                <th>Unit Type</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/inventory.js"></script>
}

